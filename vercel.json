{
    "version": 2,
    "builds": [
        {
            "src": "app/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/analyze",
            "dest": "app/main.py"
        },
        {
            "src": "/api/status",
            "dest": "app/main.py"
        },
        {
            "src": "/api/results",
            "dest": "app/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/static/$1"
        }
    ]
} 